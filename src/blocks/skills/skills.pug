mixin skills()
  aside.skills
    .skills__content
      +status('Навыки')
      .skills__skills
        .skills__skill 
          .pie.animate.no-round(style="--p: 70;")
            .skills__image
              include img/html.svg
          p.skills__text HTML 5
        .skills__skill
          .pie.animate.no-round(style="--p: 70;")
            .skills__image
              include img/css.svg
          p.skills__text CSS 3
        .skills__skill 
          .pie.animate.no-round(style="--p: 40;")
            .skills__image
              include img/js.svg
          p.skills__text Java Script
        .skills__skill 
          .pie.animate.no-round(style="--p: 70;")
            .skills__image
              include img/figma.svg
          p.skills__text Figma
        .skills__skill 
          .pie.animate.no-round(style="--p: 20;")
            .skills__image
              include img/react.svg
          p.skills__text React
        